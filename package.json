{
  "name": "lol-drafter",
  "version": "1.0.0",
  "description": "Tool for analize and help choosing champions in League of Legends",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon server.js --ignore client/",
    "start:prod": "set NODE_ENV=production&&nodemon server.js",
    "client": "live-server ./client",
    "fullstack": "concurrently \"npm run start\" \"npm run client\"",
    "worker": "node ./worker.js *> ./worker.log",
    "worker:noreset": "node ./worker.js --noreset *> ./worker.log"
  },
  "author": "Kuantik Software",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsdom": "^26.1.0",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "puppeteer": "^24.10.2",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
